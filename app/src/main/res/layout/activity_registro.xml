<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:src="@drawable/fondoregistros"
        android:scaleType="centerCrop"/>





    <!--<View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/marcohome" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="LogoGSE"
        app:srcCompat="@drawable/logobueno" />-->

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:contentDescription="LogoGSE"
                app:srcCompat="@drawable/logosolido2"
                android:transitionName="mainlogo"/>


    <TextView
        android:id="@+id/registrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@id/imageView"/>

    <LinearLayout
        android:id="@+id/email"
        android:layout_below="@id/registrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/iconomail"
            android:layout_gravity="center"
            />

        <android.support.design.widget.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtemail"


            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:visibility="visible"
            android:maxLines="1"
            />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/usuario"
        android:layout_marginTop="8dp"
        android:layout_below="@id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/iconousuario"
            android:layout_gravity="center"
            />

        <android.support.design.widget.TextInputLayout

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtusuario"

            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/usersign"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:visibility="visible"
            />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

            <LinearLayout
                android:id="@+id/contraseña"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/usuario"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
               >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconocontrasena"
                    />

                <android.support.design.widget.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtcontraseña"

                    android:baselineAligned="true"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/passsign"
                    android:inputType="textPassword"
                    android:paddingRight="50dp"
                    android:singleLine="true"
                    android:textColor="#FFFF"
                    android:textColorHint="#FFFF"
                    android:visibility="visible" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

    <LinearLayout
        android:id="@+id/infoextra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contraseña"
        android:layout_margin="16dp"
        android:background="@drawable/boton_redondo_inicio"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pro1"
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"/>

                <Spinner
                    android:id="@+id/spinnersexo"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"></Spinner>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pro2"
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"/>

                <Spinner
                    android:id="@+id/spinneredad"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"></Spinner>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:text="@string/pro3"
                    android:layout_alignParentLeft="true"/>

                <Spinner
                    android:id="@+id/spinnerformacion"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"></Spinner>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pro4"
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"/>

                <Spinner
                    android:id="@+id/spinnerauriculares"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"></Spinner>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pro5"
                    android:textSize="16dp"
                    android:layout_alignParentLeft="true"/>

                <Spinner
                    android:id="@+id/spinnerprecios"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"></Spinner>

            </RelativeLayout>



        </LinearLayout>



    </LinearLayout>






    <Button
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/infoextra"
        android:layout_marginTop="24dp"
        android:background="@drawable/boton_redondo_inicio"
        android:text="@string/login4"
        android:clickable="true"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:onClick="signupRequest"/>

    <LinearLayout
        android:id="@+id/cargando"
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:background="#A4363030"
        android:gravity="center"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/marcobotonsolido">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por favor, espere..."
                android:textColor="@color/colorgris"
                android:fontFamily="sans-serif-condensed"/>

            <ProgressBar
                android:layout_marginTop="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>

</ScrollView>