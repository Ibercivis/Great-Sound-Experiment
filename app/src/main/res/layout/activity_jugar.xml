<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jugar"
    android:background="#333333">

    //Cabecera - Título

<FrameLayout
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottom_bar"></FrameLayout>


//A partir de aquí es toda la barra de abajo - JUEGO



<android.support.design.widget.BottomNavigationView
    android:id="@+id/bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:menu="@menu/bottomenu"
    android:elevation="6dp"
    android:background="@color/rosachica"
    app:itemIconTint="@color/bottom_nav"
    app:itemTextColor="@color/bottom_nav"></android.support.design.widget.BottomNavigationView>

</RelativeLayout>