<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/fondo_auriculares">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/borde_redondo_secundario"
        />

    <ImageView
        android:id="@+id/logoplay"
        android:layout_marginTop="70dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="LogoPlay"
        app:srcCompat="@drawable/iconoplay" />

    <TextView
        android:id="@+id/registrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDENTIFÍCATE"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textSize="18dp"/>



    <LinearLayout
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconousuario"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/txtusuario"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Usuario"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contraseña"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconocontrasena"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/txtcontraseña"
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:paddingRight="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#FFFF"
            android:textColorHint="#FFFF"
            android:visibility="visible" />

    </LinearLayout>

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/contraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/boton_redondo_inicio"
        android:text="Aceptar"
        android:clickable="true"
        android:textStyle="bold" />


</RelativeLayout>