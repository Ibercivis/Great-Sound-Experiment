<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel5"
    android:background="@drawable/fondo_nivel_1">

    //Cabecera - Título

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel 5"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    // Zona Amarilla de ESCUCHA

    <LinearLayout
        android:id="@+id/espacioaudios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="#40ffcc00">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa para escuchar los audios."
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Cambia entre los audios para notar las diferencias entre ellos"/>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:id="@+id/opciona"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play1">

                <ImageView
                    android:id="@+id/boton1"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/mute_blanco"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Audio 1"
                    android:gravity="center"
                    android:layout_toRightOf="@id/boton1"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/opcionb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="play2">

                <ImageView
                    android:id="@+id/boton2"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/mute_blanco"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Audio 2"
                    android:gravity="center"
                    android:layout_toRightOf="@id/boton2"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    //A partir de aquí es el ESPACIO DE RESPUESTA

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/espacioaudios"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="¿List@ para elegir el audio que mejor suena?"/>

        <Button
            android:id="@+id/audio1"
            android:layout_width="200dp"
            android:text="Audio 1"
            android:background="@drawable/boton_redondo_inicio"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:onClick="votar1"/>

        <Button
            android:id="@+id/audio2"
            android:layout_width="200dp"
            android:text="Audio 2"
            android:background="@drawable/boton_redondo_inicio"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:onClick="votar2"/>

    </LinearLayout>


    //A partir de aquí es toda la barra de abajo - JUEGO

    <LinearLayout
        android:id="@+id/barrafondo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/stats_gris"
                android:onClick="aStatsB"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/juego_azul"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/perfil_gris"/>
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>